{
  "name": "octorelease",
  "private": true,
  "description": "Extensible GitHub action to publish semantic releases.",
  "main": "index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsc -b --force",
    "lint": "eslint packages/**/*.ts",
    "pack": "npm run pack --workspaces",
    "test": "jest",
    "typedoc": "typedoc --plugin typedoc-plugin-markdown --out docs/typedoc packages/core/src/index.ts",
    "watch": "tsc -w",
    "all": "npm run build && npm run lint && npm run pack && npm test",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zowe-actions/octorelease.git"
  },
  "keywords": [],
  "author": "t1m0thyj",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*",
    "script"
  ],
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "esbuild": "^0.17.5",
    "eslint": "^8.33.0",
    "eslint-plugin-jest": "^27.2.0",
    "eslint-plugin-license-header": "^0.6.0",
    "husky": "^9.0.11",
    "jest": "^29.4.0",
    "jest-circus": "^29.4.0",
    "ts-jest": "^29.0.0",
    "typedoc": "^0.23.0",
    "typedoc-plugin-markdown": "^3.13.0",
    "typescript": "^4.9.0"
  }
}
