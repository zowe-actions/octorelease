{
  "name": "@octorelease/core",
  "version": "0.1.5",
  "description": "Octorelease core package containing the CLI and APIs for plugins.",
  "main": "lib/index.js",
  "bin": {
    "octorelease": "lib/main.js"
  },
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc -b && npm run lint",
    "lint": "eslint src",
    "pack": "esbuild src/main.ts --bundle --outfile=../../dist/index.js --platform=node",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postversion": "cd ../.. && npm install --package-lock-only --ignore-scripts --no-audit",
    "watch": "tsc -w"
  },
  "keywords": [
    "changelog",
    "cli",
    "git",
    "github",
    "npm",
    "octorelease",
    "publish",
    "semver",
    "release",
    "version"
  ],
  "author": "t1m0thyj",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@actions/core": "^1.3.0",
    "@actions/exec": "^1.1.0",
    "@types/env-ci": "^3.1.1",
    "cosmiconfig": "^7.0.0",
    "env-ci": "^5.4.0",
    "micromatch": "^4.0.4",
    "semver": "^6.3.0"
  },
  "optionalDependencies": {
    "@octorelease/changelog": "^0.1.0",
    "@octorelease/git": "^0.1.0",
    "@octorelease/github": "^0.1.0",
    "@octorelease/npm": "^0.1.0"
  }
}
